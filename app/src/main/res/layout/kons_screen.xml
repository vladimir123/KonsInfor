<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtAddrTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:text="@string/txt_address" />

        <TextView
            android:id="@+id/txtAddr"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="start"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txtTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtAddrTitle"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:text="@string/txt_kons_time" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtAddr"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txtEmailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtTimeTitle"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text="@string/txt_email" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtTime"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textAlignment="textStart" />

    </RelativeLayout>
</LinearLayout>